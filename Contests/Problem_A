import java.util.*;
import java.io.BufferedReader;
import java.io.*;
public class Problem_A {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        int t = Integer.parseInt(br.readLine());
        StringBuilder sb = new StringBuilder();
        while(t-- > 0)
        {
            StringTokenizer st = new StringTokenizer(br.readLine());
            int n = Integer.parseInt(st.nextToken());
            int h = Integer.parseInt(st.nextToken());
            int l = Integer.parseInt(st.nextToken());
            
            int[] frequency = new int[1001];
            st = new StringTokenizer(br.readLine());
            for(int i = 0; i < n; i++) {
                frequency[Integer.parseInt(st.nextToken())]++;
            }
            int onlyROwss = 0;  
            int onlyColumns = 0; 
            int bothThenumbers = 0;      
            
            for (int i = 1; i <= 1000; i++) {
                if (frequency[i] == 0) continue;
                
                if (i <= h && i <= l) {
                    bothThenumbers += frequency[i];
                } else if (i <= h) {
                    onlyROwss += frequency[i];
                } else if (i <= l) {
                    onlyColumns += frequency[i];
                }
            }
            
            int left = 0, r = n / 2;
            int answer = 0;
            
            while (left <= r) {
                int mid = (left + r) / 2;  
                
              boolean possibility = false;
                int minX = Math.max(0, mid - onlyROwss);
                int minY = Math.max(0, mid - onlyColumns);
                
                if(minX + minY <= bothThenumbers) {
                    possibility = true;
                }
                
                if(possibility){
                    answer = mid;
                    left = mid + 1;
                } else {
                    r = mid - 1;
                }
            }
            sb.append(answer).append("\n");
        }
        System.out.print(sb);
    }
}
